<!-- Contact section starts -->
<section class="contact" id="contact" style="display: flex; justify-content: center; align-items: center; text-align: center; padding-top: 30px;">
  <div class="container">
    <div class="content">
      <div class="image-box">
        <!-- Contact Image -->
        <img draggable="false" class="image" src="/img/contact.png" alt="Contact Image" style="width: 200px; height: auto; margin-bottom: 20px;">
        <div class="contact-info">
          <!-- Contact Information -->
          <p><strong>Name:</strong> Krupali Patel</p>
          <p><strong>Email:</strong> kpate920@mycentennial.college.ca</p>
          <p><strong>Phone:</strong> +1 000-000-0000</p>
          <p style="margin-bottom: 0;"><strong>Address:</strong> North York, Ontario</p>
        </div>
      </div>
      <section class="contact" id="contact">
        <div class="container">
          <div class="content">
            <h2 style="font-size: 28px;">Get in Touch!</h2>
            <form id="contact-form">
              <div class="form-group">
                <!-- First Name -->
                <div class="field">
                  <input type="text" name="fname" placeholder="First Name" required>
                  <i class="fas fa-user"></i>
                </div>
                <!-- Last Name -->
                <div class="field">
                  <input type="text" name="lname" placeholder="Last Name" required>
                  <i class="fas fa-user"></i>
                </div>
                <!-- Email -->
                <div class="field">
                  <input type="text" name="email" placeholder="Email" required>
                  <i class="fas fa-envelope"></i>
                </div>
                <!-- Phone -->
                <div class="field">
                  <input type="text" name="phone" placeholder="Phone" required>
                  <i class="fas fa-phone-alt"></i>
                </div>
                <!-- Message -->
                <div class="message">
                  <textarea placeholder="Message" name="message" required></textarea>
                  <i class="fas fa-comment-dots"></i>
                </div>
                <div class="button-area">
                  <!-- Submit Button -->
                  <button type="submit" id="submit" class="btn" style="background-color: black; color: white; margin-top: -10px;">
                    Submit <i class="fa fa-paper-plane"></i>
                  </button>
                </div>
              </div><br><br><br>
            </form>
          </div>
        </div>
      </section>
    </div>
  </div>
</section>

<!-- Contact section ends -->

<!--Script section -->
<!-- emailjs to mail contact form data -->
<script>
  let form1 = document.getElementsByTagName("form")[0];
  form1.addEventListener("submit", (e) => {
    e.preventDefault();
    alert("Thank you! Your form has been submitted.");
    window.location.href = '/';
  });
</script>

