    .navbar {
      background-color: rgb(8, 138, 164);
    }

    .navbar-brand,
    .nav-link {
      font-family: 'Your Aesthetic Font', sans-serif;
      color: white;
    }

    .nav-link:hover {
      color: rgb(0, 15, 18);
